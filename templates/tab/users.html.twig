{% extends "template.html.twig" %}

{% block title %}
    Users
{% endblock %}

{% block pageTitle %}
    Users
{% endblock %}
    
{% block body %}
    {% include "fragments/date-jour.html.twig" %}
    <div class="alert alert-warning">
        <a href="{{ path("tab", {nb:7}) }}">Cr√©er 7 Stats Table </a>
    </div>
    <table class="table">
        <tr class="table-active">
            <td>FirstName</td>
            <td>Name</td>
            <td>Age</td>
            <td>Message</td>
        </tr>

        {% for user in users %}    
            <tr class="table-{% if loop.index is odd %}danser{% else %}warning{% endif %}">
                <td>{{user.firstName}}</td>
                <td>{{user.name}}</td>
                <td>{{user.age}}</td>
                <td>
                    {{ render(controller("App\\Controller\\FirstController::sayHello", {firstName: user.firstName, name : user.name})) }}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}